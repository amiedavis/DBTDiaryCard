    android:id="@+id/relativeLayoutCheckboxes">

    <CheckBox
        android:text="Acted on urge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBoxAction"
        android:gravity="center_vertical"/>

    <CheckBox
        android:text="Took medication"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBoxMeds"
        android:layout_below="@id/checkBoxAction"
        />

    <CheckBox
        android:text="Used skills"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBoxSkills"
