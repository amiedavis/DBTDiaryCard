        android:layout_alignTop="@+id/relativeLayoutCheckboxes"
        android:layout_alignRight="@+id/relativeLayoutCheckboxes"
        android:layout_alignEnd="@+id/relativeLayoutCheckboxes"
        android:layout_marginTop="24dp" />

</RelativeLayout>

